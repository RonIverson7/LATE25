{
  "info": {
    "_postman_id": "museo-auction-api-collection",
    "name": "Museo Auction API",
    "description": "Complete blind auction system API testing collection",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"seller@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "pm.environment.set(\"token\", jsonData.data.token);"
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Auction Items",
      "item": [
        {
          "name": "1. Create Auction Item",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Vintage Oil Painting - Sunset Landscape\",\n  \"description\": \"Beautiful 1950s oil painting depicting a serene sunset over mountains. Excellent condition, professionally framed.\",\n  \"images\": [\n    \"https://example.com/painting1.jpg\",\n    \"https://example.com/painting2.jpg\"\n  ],\n  \"primary_image\": \"https://example.com/painting1.jpg\",\n  \"medium\": \"Oil on canvas\",\n  \"dimensions\": \"50cm x 40cm\",\n  \"year_created\": 1950,\n  \"weight_kg\": 2.5,\n  \"is_original\": true,\n  \"is_framed\": true,\n  \"condition\": \"excellent\",\n  \"categories\": [\"art\", \"vintage\", \"painting\"],\n  \"tags\": [\"oil\", \"landscape\", \"1950s\", \"framed\"]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auctions/items",
              "host": ["{{baseUrl}}"],
              "path": ["auctions", "items"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "pm.environment.set(\"auctionItemId\", jsonData.data.auctionItemId);"
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Auctions",
      "item": [
        {
          "name": "2. Create Auction",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"auctionItemId\": \"{{auctionItemId}}\",\n  \"startPriceCentavos\": 50000,\n  \"reservePriceCentavos\": 100000,\n  \"minIncrementCentavos\": 10000,\n  \"startAt\": \"2025-11-15T19:25:00Z\",\n  \"endAt\": \"2025-11-15T20:25:00Z\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auctions",
              "host": ["{{baseUrl}}"],
              "path": ["auctions"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "pm.environment.set(\"auctionId\", jsonData.data.auctionId);"
                ]
              }
            }
          ]
        },
        {
          "name": "3. List Auctions",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/auctions?status=active&page=1&limit=20",
              "host": ["{{baseUrl}}"],
              "path": ["auctions"],
              "query": [
                {
                  "key": "status",
                  "value": "active"
                },
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "20"
                }
              ]
            }
          }
        },
        {
          "name": "4. Get Auction Details",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/auctions/{{auctionId}}",
              "host": ["{{baseUrl}}"],
              "path": ["auctions", "{{auctionId}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Bids",
      "item": [
        {
          "name": "5. Place First Bid",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{bidderToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"amountCentavos\": 75000,\n  \"idempotencyKey\": \"bid-001-user-123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auctions/{{auctionId}}/bids",
              "host": ["{{baseUrl}}"],
              "path": ["auctions", "{{auctionId}}", "bids"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "pm.environment.set(\"bidId\", jsonData.data.bidId);"
                ]
              }
            }
          ]
        },
        {
          "name": "6. Place Higher Bid",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{bidderToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"amountCentavos\": 95000,\n  \"idempotencyKey\": \"bid-002-user-123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auctions/{{auctionId}}/bids",
              "host": ["{{baseUrl}}"],
              "path": ["auctions", "{{auctionId}}", "bids"]
            }
          }
        },
        {
          "name": "7. Get My Bid",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{bidderToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/auctions/{{auctionId}}/my-bid",
              "host": ["{{baseUrl}}"],
              "path": ["auctions", "{{auctionId}}", "my-bid"]
            }
          }
        }
      ]
    },
    {
      "name": "Error Tests",
      "item": [
        {
          "name": "❌ Bid Below Starting Price",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{bidderToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"amountCentavos\": 30000,\n  \"idempotencyKey\": \"bid-error-001\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auctions/{{auctionId}}/bids",
              "host": ["{{baseUrl}}"],
              "path": ["auctions", "{{auctionId}}", "bids"]
            }
          }
        },
        {
          "name": "❌ Bid Below Minimum Increment",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{bidderToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"amountCentavos\": 100000,\n  \"idempotencyKey\": \"bid-error-002\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auctions/{{auctionId}}/bids",
              "host": ["{{baseUrl}}"],
              "path": ["auctions", "{{auctionId}}", "bids"]
            }
          }
        },
        {
          "name": "❌ Idempotency Test (Same Request Twice)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{bidderToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"amountCentavos\": 75000,\n  \"idempotencyKey\": \"bid-idempotent-001\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auctions/{{auctionId}}/bids",
              "host": ["{{baseUrl}}"],
              "path": ["auctions", "{{auctionId}}", "bids"]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000/api",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    },
    {
      "key": "bidderToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "auctionItemId",
      "value": "",
      "type": "string"
    },
    {
      "key": "auctionId",
      "value": "",
      "type": "string"
    },
    {
      "key": "bidId",
      "value": "",
      "type": "string"
    }
  ]
}
